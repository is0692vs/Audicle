name: E2E Tests (disabled)

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]

jobs:
  test-auth:
    name: 認証フロー
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: '20'
      - run: npm ci
      - run: npx playwright install --with-deps chromium
      - name: Run auth tests
        run: npx playwright test --project=setup --project=chromium tests/e2e/auth.spec.ts
      - name: Upload auth state
        if: success()
        uses: actions/upload-artifact@v4
        with:
          name: playwright-auth-state
          path: ${{ github.workspace }}/packages/web-app-vercel/playwright/.auth/user.json
          retention-days: 1