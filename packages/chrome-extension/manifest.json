{
  "name": "Audicle",
  "version": "1.0.1",
  "description": "A browser extension to read articles aloud.",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://*.google.com/", "http://localhost:8001/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-extract/rules.js", "content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "lib/Readability.js",
        "config.json",
        "sample.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
